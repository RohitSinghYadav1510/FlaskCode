pipeline {
   agent none
    options {
        skipStagesAfterUnstable()
       }

  stages {

     stage('Test Application') {
            agent {
               docker {
                 image 'rohit1015/flaskimg:v1'
               }
           } 
            steps {
              sh 'python test.py'
              }
            post {
              always {
                 junit 'test-reports/*.xml'
               }
            }    
        }
     stage('Analysis with Sonarqube'){
          agent any
          steps {
           sh 'docker run --rm -v /var/lib/jenkins/workspace/Newjob:/usr/src sonarsource/sonar-scanner-cli -Dsonar.projectKey=sonarqube-flask -Dsonar.projectBaseDir=/usr/src'
        } 
     }  
   }
}